    "version": "0.2.0",
    "configurations": [
    {
        "program": "/usr/bin/make",
        "args": ["-C", "./build"],
        "name": "Build With Make",
        "type" :"cppdbg",
        "request": "launch",
        "cwd": "${workspaceFolder}",
    },
    {
        "name": "(gdb) Launch",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/build/ProjectX",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "setupCommands": [
            {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
            }
        ]
    },
    ]
}